@page
@model AmarilloMarble.Pages.Customers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.CustomerFirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerFirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.CustomerLastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerLastName)
        </dd>
        @foreach(var r in Model.Customer.Jobs)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => r.JobAddress)
            </dt>
            <dd class = "col-sm-1">
                @Html.DisplayFor(model => r.JobAddress)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => r.JobBuilder)
            </dt>
            <dd class = "col-sm-1">
                @Html.DisplayFor(model => r.JobBuilder)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => r.JobDate)
            </dt>
            <dd class = "col-sm-1">
                @Html.DisplayFor(model => r.JobDate)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Customer.CustomerId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
